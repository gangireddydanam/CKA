rollout

kubectl run nginx --image=nginx --env=a=10 --port=80
kubectl run nginx --image=nginx --env=a=10 --port=80 --labels="app=test,env=dev"
kubectl run nginx --imgae=nginx --replicas=10 
kubectl run nginx --image=nginx --dry-run
kubectl run nginx --image=nginx --replicas=10 --restart=Never


